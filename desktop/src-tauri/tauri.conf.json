{
  "productName": "pic2pic-nextgen",
  "version": "2.0.0",
  "identifier": "com.massivemagnetics.pic2pic-nextgen",
  "build": {
    "beforeDevCommand": "cd ../web-client && npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "cd ../web-client && npm run build",
    "frontendDist": "../web-client/build"
  },
  "app": {
    "windows": [
      {
        "title": "pic2pic-nextgen",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "minWidth": 800,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  }
}
